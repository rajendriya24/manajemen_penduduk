<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_penduduk_kelurahan_tree" model="ir.ui.view">
        <field name="name">penduduk.kelurahan.tree</field>
        <field name="model">penduduk.kelurahan</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="kode"/>
                <field name="kecamatan_id"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <record id="view_penduduk_kelurahan_form" model="ir.ui.view">
        <field name="name">penduduk.kelurahan.form</field>
        <field name="model">penduduk.kelurahan</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="kode"/>
                        <field name="provinsi_id"/>
                        <field name="kabupaten_id"/>
                        <field name="kecamatan_id"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_penduduk_kelurahan" model="ir.actions.act_window">
        <field name="name">Kelurahan/Desa</field>
        <field name="res_model">penduduk.kelurahan</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_penduduk_kelurahan"
              name="Kelurahan/Desa"
              parent="menu_penduduk_master"
              action="action_penduduk_kelurahan"/>
</odoo>