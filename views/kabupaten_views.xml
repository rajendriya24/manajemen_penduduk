<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- SEARCH VIEW -->
    <record id="view_penduduk_kabupaten_search" model="ir.ui.view">
        <field name="name">penduduk.kabupaten.search</field>
        <field name="model">penduduk.kabupaten</field>
        <field name="arch" type="xml">
            <search string="Cari Kabupaten/Kota">
                <field name="name" string="Nama"/>
                <field name="kode" string="Kode"/>
                <field name="provinsi_id" string="Provinsi"/>

                <separator/>

                <filter name="filter_active" string="Aktif" domain="[('active','=',True)]"/>
                <filter name="filter_archived" string="Arsip" domain="[('active','=',False)]"/>

                <separator/>

                <group expand="0" string="Group By">
                    <filter name="group_by_provinsi" string="Provinsi" context="{'group_by':'provinsi_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_penduduk_kabupaten_tree" model="ir.ui.view">
        <field name="name">penduduk.kabupaten.tree</field>
        <field name="model">penduduk.kabupaten</field>
        <field name="arch" type="xml">
            <tree string="Kabupaten/Kota" default_order="provinsi_id,name">
                <field name="name"/>
                <field name="kode"/>
                <field name="provinsi_id"/>
                <field name="active" widget="boolean_toggle"/>
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_penduduk_kabupaten_form" model="ir.ui.view">
        <field name="name">penduduk.kabupaten.form</field>
        <field name="model">penduduk.kabupaten</field>
        <field name="arch" type="xml">
            <form string="Kabupaten/Kota">
                <sheet>

                    <header>
                        <field name="active" invisible="1"/>
                        <button name="toggle_active" type="object"
                                string="Arsipkan" class="btn-secondary"
                                invisible="not active"/>
                        <button name="toggle_active" type="object"
                                string="Pulihkan" class="btn-primary"
                                invisible="active"/>
                    </header>

                    <widget name="web_ribbon" title="ARCHIVED" bg_color="danger"
                            invisible="active"/>

                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="Contoh: Kabupaten Bandung"/>
                        </h1>
                    </div>

                    <group>
                        <group string="Informasi">
                            <field name="provinsi_id"/>
                            <field name="kode"/>
                        </group>
                        <group string="Status">
                            <field name="active"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <!-- ACTION -->
    <record id="action_penduduk_kabupaten" model="ir.actions.act_window">
        <field name="name">Kabupaten/Kota</field>
        <field name="res_model">penduduk.kabupaten</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_penduduk_kabupaten_search"/>
        <field name="context">{'search_default_filter_active': 1}</field>
    </record>

    <!-- MENU -->
    <menuitem id="menu_penduduk_kabupaten"
              name="Kabupaten/Kota"
              parent="menu_penduduk_master"
              action="action_penduduk_kabupaten"
              sequence="20"/>
</odoo>